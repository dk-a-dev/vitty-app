<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/nav_host_fragment_activity_main"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:defaultNavHost="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navGraph="@navigation/mobile_navigation" />

        <!-- Uncomment the below code to use BottomNavigationView -->
<!--        <com.google.android.material.bottomnavigation.BottomNavigationView-->
<!--            android:id="@+id/nav_view"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_gravity="center"-->
<!--            android:layout_marginBottom="40dp"-->
<!--            android:background="@drawable/bg_nav_bar"-->
<!--            android:elevation="8dp"-->
<!--            android:padding="8dp"-->
<!--            app:elevation="8dp"-->
<!--            app:itemBackground="@drawable/nav_item_background"-->
<!--            app:itemIconSize="24dp"-->
<!--            app:itemIconTint="@color/text"-->
<!--            app:itemTextColor="@color/text"-->
<!--            app:labelVisibilityMode="selected"-->
<!--            app:layout_constraintBottom_toBottomOf="parent"-->
<!--            app:layout_constraintLeft_toLeftOf="parent"-->
<!--            app:layout_constraintRight_toRightOf="parent"-->
<!--            app:menu="@menu/bottom_nav_menu" />-->

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:scrollbars="none"
            android:fillViewport="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <LinearLayout
                android:id="@+id/custom_bottom_nav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/bg_nav_bar"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp"
                android:elevation="0dp">

                <LinearLayout
                    android:id="@+id/nav_academics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@color/transparent"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="8dp"
                    android:minWidth="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_academics_outline"
                        app:tint="@color/text"
                        android:contentDescription="@string/title_academics"/>

                    <TextView
                        android:id="@+id/text_academics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_academics"
                        android:textColor="@color/text"
                        android:fontFamily="@font/poppins_400"
                        android:textSize="16sp"
                        android:layout_marginStart="6dp"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:maxWidth="100dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:layout_marginEnd="8dp"
                    android:background="@android:color/transparent"
                    android:minWidth="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_timetable_outline"
                        app:tint="@color/text"
                        android:contentDescription="@string/title_schedule"/>

                    <TextView
                        android:id="@+id/text_timetable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_schedule"
                        android:textColor="@color/text"
                        android:fontFamily="@font/poppins_400"
                        android:textSize="16sp"
                        android:layout_marginStart="6dp"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:maxWidth="100dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nav_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:background="@android:color/transparent"
                    android:minWidth="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_community_outline"
                        app:tint="@color/text"
                        android:contentDescription="@string/title_connect"/>

                    <TextView
                        android:id="@+id/text_community"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_connect"
                        android:textColor="@color/text"
                        android:fontFamily="@font/poppins_400"
                        android:textSize="16sp"
                        android:layout_marginStart="6dp"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:maxWidth="80dp" />
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>