        <LinearLayout
            android:id="@+id/custom_bottom_nav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_nav_bar"
            android:paddingVertical="12dp"
            android:paddingHorizontal="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:elevation="8dp">

            <LinearLayout
                android:id="@+id/nav_academics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@color/transparent"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_academics_outline"
                    app:tint="@color/text"
                    android:contentDescription="@string/title_academics"/>

                <TextView
                    android:id="@+id/text_academics"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_academics"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_400"
                    android:textSize="17sp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Timetable -->
            <LinearLayout
                android:id="@+id/nav_timetable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:layout_marginEnd="12dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_timetable_outline"
                    app:tint="@color/text"
                    android:contentDescription="@string/title_schedule"/>

                <TextView
                    android:id="@+id/text_timetable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_schedule"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_400"
                    android:textSize="17sp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Community -->
            <LinearLayout
                android:id="@+id/nav_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:background="@android:color/transparent">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_community_outline"
                    app:tint="@color/text"
                    android:contentDescription="@string/title_connect"/>

                <TextView
                    android:id="@+id/text_community"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_connect"
                    android:textColor="@color/text"
                    android:fontFamily="@font/poppins_400"
                    android:textSize="17sp"
                    android:layout_marginStart="8dp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>